/* 모바일 헤더 */
.header {overflow: hidden; padding: 10px;}
.header .logo h1 img {width: 80px;}
.header .top-btn ul {margin-top: 5px;}
.header .top-btn ul li a {font-size: 12px; padding: 10px 5px;}

/* 모바일 메뉴 */
.menu > div > ul > li {display: block;}
.menu > div > ul > li a {font-size: 15px; margin: 5px 10px; border-bottom: 1px solid #fff;}

.m-menu {position: absolute; right: 10px; top: 70px; z-index: 9999; display: block;}
.m-menu a {display: block; width: 25px; height: 20px; position: relative; transition: all 0.3s;}
.m-menu a span {width: 100%; height: 3px; background: #fff; display: block; position: absolute; transition: all 0.3s;}
.m-menu a span:nth-child(1) {top: 0px;}
.m-menu a span:nth-child(2) {top: 8px;}
.m-menu a span:nth-child(3) {bottom: 0px;}

/* 햄버거 메뉴를 클릭하면 X 모양이 됨 */
/* .m-menu a.active span:nth-child(1) {transform:rotate(-45deg) translateY(12px);}
.m-menu a.active span:nth-child(2) {opacity: 0;} 투명도 
.m-menu a.active span:nth-child(3) {transform:rotate(45deg) translateY(-12px);} */

/* .m-menu a.active span:nth-of-type(1) {transform : translateY(9px) rotate(-315deg);}
.m-menu a.active span:nth-of-type(2) {opacity : 0;}
.m-menu a.active span:nth-of-type(3) {transform : translateY(-9px) rotate(315deg);}
 */

.m-menu a.active {transform: rotate(360deg);}
.m-menu a.active span:nth-of-type(1) {transform: translateY(9px) rotate(-45deg);}
.m-menu a.active span:nth-of-type(3) {transform: translateY(-9px) rotate(45deg);}
.m-menu a.active span:nth-of-type(2) {opacity: 0;}

/* 평소에는 메뉴 숨김 */
.menu {position: fixed; z-index: 9999; left: -100%; width: 100%; max-width: 200px; height: 100%; transition: all 0.3s;}

/* 햄버거 버튼 누르면 매뉴거 나옴 */
html.active .menu {left: 0%; z-index: 9;}

/* 모바일 서브메뉴 */
.menu > div > ul > li > ul.submenu {position: relative; border-bottom: 0px solid #000;}
.menu > div > ul > li > ul.submenu a {font-size: 12px;}

/* 배너 이미지 크기 조절 */
.banner .swiper-container img {max-width: 100%; height: auto;}

/* 탭 메뉴 조절 */
.tab-menu ul li a {padding: 1px 3px; font-size: 12px;}

.bbs-box > div > .board-box {float: none; width: auto;}
.bbs-box > div > .right-banner {float: none; width: auto;}
.bbs-box > div > .board-box > div {padding: 5px 10px;}

.tab-con ul li a {padding: 1px; font-size: 12px;}
.tab-con ul li span {padding: 1px; font-size: 12px;}

.footer > div {padding: 10px;}
.footer h1 {font-size: 12px;}
.footer p {font-size: 10px;}
.footer span {font-size: 10px;}