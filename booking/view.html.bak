		.cal-box ul li a span.selected{color: #fff; background: #000; padding: 5px; border-radius: 5px;}
		.cal-box ul li a span:hover:not(.day){color: #fff; background: #000; padding: 5px; border-radius: 5px;}
		
		.cal-hd {text-align: center;}
		.cal-hd span {display:inline-block; margin: 10px; padding: 10px;}
